# Main site
{$ROOT_DOMAIN}, www.{$ROOT_DOMAIN} {
  encode zstd gzip

  # React frontend (served by web container)
  reverse_proxy web:80

  # API under /api
  handle_path /api/* {
    reverse_proxy api:{$PORT}
  }
}

# n8n on subdomain
n8n.{$ROOT_DOMAIN} {
  encode zstd gzip
  reverse_proxy n8n:5678
}
